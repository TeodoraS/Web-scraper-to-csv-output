import random

game_nr = int(raw_input("Insert the number of games:\t"))
all_rolls = []

def roll_dice(n):
    rolls =[]
    while n > 0:
        roll = random.randrange(1, 7, 1)
        n = n - roll
        rolls.append(roll)
    all_rolls.append(rolls)


def verify_dice():
    for element in all_rolls:
        if sum(element) != 20:
            all_rolls.remove(element)
        else:
            pass
        
def sort_dice(n):
    for i in range(4, n):
        times = []
        for element in all_rolls:
            if len(element) == i:
                times.append(element)
        print "Roll the dice %d times = %s" % (i, len(times))
            
while len(all_rolls) < game_nr :
    roll_dice(20)
    verify_dice()
print all_rolls
sort_dice(21)
    
